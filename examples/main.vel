import "velvet-std"

set message = "hello, velvet!"
say str_upper(message)

for i in range(1, 5):
    say "Loop iteration: " + i

fn greet(name):
    say "Hello, " + name + "!"

do window:
    title "Velvet Demo"
    size 800, 600
    textinput "user" "Enter your name"
    button "Greet" action:
        greet("User")
    button "Calculate" action:
        set num = math_sqrt(25)
        say "Square root of 25: " + num
