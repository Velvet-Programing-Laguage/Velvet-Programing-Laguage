import "velvet-std"

set counter = 0

fn increment(n):
    set counter = counter + n
    say "Counter: " + counter

do window:
    title "Advanced App"
    size 800, 600
    textinput "name" "Enter your name"
    button "Increment" action:
        increment(1)
    button "Reset" action:
        set counter = 0
        say "Counter reset"
